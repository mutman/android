<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/second_color"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/prayer_type_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prayer_page_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Small Text"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prayer_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical" 
        android:layout_weight="1">
    </LinearLayout>
	<org.meruvian.midas.ui.BannerView 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:banner="http://schemas.android.com/apk/res/org.mutiaraiman.droid"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_gravity="bottom|center_horizontal"
	    banner:zoneId="4"
	    banner:serverHost="ads.meruvian.org"
	    banner:refreshInterval="10">
	</org.meruvian.midas.ui.BannerView>
</LinearLayout>