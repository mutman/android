<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F2F2"
        android:padding="10dp" >
    </ViewFlipper>

    <TextView
        android:id="@+id/prayer_last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/second_color"
        android:padding="5dp"
        android:text="@string/prayer_last_update"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
	<ListView
        android:id="@+id/prayer_list"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="#F3F2F2" 
        android:scrollbars="none"
        android:cacheColorHint="#00000000" android:layout_weight="1"/>
	<org.meruvian.midas.ui.BannerView
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:banner="http://schemas.android.com/apk/res/org.mutiaraiman.droid"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom"
	    banner:zoneId="4"
	    banner:serverHost="ads.meruvian.org"
	    banner:refreshInterval="10">
	</org.meruvian.midas.ui.BannerView>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:padding="20dp"
        android:visibility="gone"
        android:id="@+id/maincontetn">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/mainTittleTab "
            android:textColor="#501764"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainContentTab"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="2dp"
            android:textSize="25sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/quote"
        android:layout_alignLeft="@id/maincontetn"
        android:layout_below="@+id/maincontetn"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tittleQuote"
            android:textColor="#501764"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentQuote"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/doa"
        android:layout_alignRight="@id/maincontetn"
        android:layout_below="@+id/maincontetn"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleDoa"
            android:textColor="#501764"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentDoa"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/kisah"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/quote"
        android:layout_below="@+id/quote"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleKisah"
            android:textColor="#501764"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentKisah"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/lagu"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/doa"
        android:layout_below="@+id/doa"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleLagu"
            android:textColor="#501764"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentLagu"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="2dp"
            />

    </LinearLayout>
</LinearLayout>